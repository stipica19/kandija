<%- include ('partials/nav.ejs') %>

  <div class="heading-page header-text">
    <section class="page-heading">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="text-content">
              <h4>ŽUPA SV. ILIJE PROROKA </h4>
              <h2>KANDIJA</h2>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>


  <section class="blog-posts grid-system">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <div class="all-blog-posts">
            <div class="row">
            
              <% novosti.forEach((novost)=>{%>
              <div class="col-lg-6">
                <div class="blog-post">
                  <div class="blog-thumb">
                    <img src="<%= novost.images %>" id="images">
                  </div>
                  <div class="down-content">
                    <span><%= novost.category %></span>
                    <a href="/novosti/<%=novost._id%>">
                      <h4><%= novost.naslov %></h4>
                    </a>
                    <ul class="post-info">
                      <li>Admin</a></li>
                      <li><%= novost.datum.toLocaleDateString() %></li>
                      
                    </ul>
                    <p class="kratki-tekst2" id="kkkk" >          
                    
                    <%= novost.description.replace(/(<([^>]+)>)/ig,'').replace(/&nbsp;/g,'').substring(0,100)  %>...
                  
                    </p>
                    <a href="/novosti/<%= novost._id%>">Opširnije</a>
                    <div class="post-options">
                      <div class="row">
                        <div class="col-lg-12">
                          <ul class="post-share">
                            
 <% if(currentUser){ %>
  <li><a class="btn btn-danger brisi" data-id="<%= novost._id %>" href="/novosti/delete/<%= novost._id%>">IZBRIŠI</a></li>
 <li><a class="btn btn-primary" href="/novosti/<%= novost._id%>/edit">UREDI</a></li>
  <% } %>

                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
  <% });%>
             
              <div id="di"></div>
              
           
              <div class="paginator col-lg-12">
                <% if (typeof(totalPages) != "undefined" && totalPages > 0) { %>
                <nav class="mt-4" aria-label="Page navigation">
                    <ul class="pagination justify-content-center ">
                        <!-- First page button -->
                        <% if (Number(current) === 1) { %>
                            <li class="page-item disabled"><a class="page-link">Početna</a></li>
                        <% } else { %>
                            <li class="page-item">
                                <a class="page-link" href="/novosti?page=1<%if(search){%>?search=<%=search%><%}%>">Početna</a>
                            </li>
                        <% } %>
                        <!-- Previous page button -->
                        <% if (Number(current) === 1) { %>
                            <li class="page-item disabled">
                                <a class="page-link"><i class="fa fa-angle-double-left" aria-hidden="true"></i></a>
                            </li>
                        <% } else { %>
                            <li class="page-item">
                                <a class="page-link" href="/novosti?page=<%= Number(current)-1 %><%if(search){%>?search=<%=search%><%}%>">
                                    <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                                </a>
                            </li>
                        <% } %>
                        
                        <% var i = (Number(current) > 3 ? Number(current) - 2 : 1) %>
                        <% if (i !== 1) { %>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                        <% } %>
                        
                        <% for (; i <= totalPages && i <= (Number(current) + 2); i++) { %>
                            <% if (i === Number(current)) { %>
                                <li class="page-item active"><a class="page-link"><%= current %></a></li>
                            <% } else { %>
                                <li class="page-item">
                                    <a class="page-link" href="/novosti?page=<%=i%><%if(search){%>?search=<%=search%><%}%>"><%= i %></a>
                                </li>
                            <% } %>
                            
                            <% if (i === (Number(current) + 2) && i < totalPages) { %>
                                <li class="page-item disabled"><a class="page-link">...</a></li>
                            <% } %>
                        <% } %>
                        <!-- Next page button -->
                        <% if (Number(current) === totalPages) { %>
                            <li class="page-item disabled">
                                <a class="page-link"><i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
                            </li>
                        <% } else { %>
                            <li class="page-item">
                                <a class="page-link" href="/novosti?page=<%= Number(current)+1 %><%if(search){%>?search=<%=search%><%}%>">
                                    <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                </a>
                            </li>
                        <% } %>
                        <!-- Last page button -->
                        <% if (Number(current) === totalPages) { %>
                            <li class="page-item disabled"><a class="page-link">Zadnja</a></li>
                        <% } else { %>
                            <li class="page-item">
                                <a class="page-link" href="/novosti?page=<%= totalPages %><%if(search){%>?search=<%=search%><%}%>">Last</a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
                <% } %>
            </div>
            </div>
            
          </div>
        </div>
        <div class="col-lg-4">
          <div class="sidebar">
            <div class="row">
              <div class="col-lg-12">
                <div class="sidebar-item search">
                  <form action="/novosti" method="GET" class="form-inline">
                    <input type="text" name="search" style="font-family: FontAwesome;"  placeholder="&#xf002 Traži...">  
                    <input type="submit"  value="Pretraži">
                  </form>
                </div>
              </div>
          
              <div class="col-lg-12">
                <div class="sidebar-item categories">
                  <div class="sidebar-heading">
                    <h2>KATEGORIJE</h2>
                  </div>
                  <div class="content">
                    <ul>
                      <li><a href="/preminuli">- PREMINULI</a></li>
                      <li><a href="#">- ŽUPNE OBAVIJESTI</a></li>
                      <li><a href="#">- OSTALO</a></li>
                      
                    </ul>
                  </div>
                </div>
              </div>
           
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
