<%- include ('partials/header.ejs') %>

<%- include ('partials/nav.ejs') %>
 
    
    <!-- Banner Ends Here -->
    <section class="gallery-block cards-gallery margina">
      <div class="container">
  
        <h2 style="color:#6e0000;" class="text-center margina2">GROBLJA</h2>
      
        <div class="row">
        <% groblja.forEach((groblja)=>{%>
          <div class="col-md-6 col-lg-4 gr">
            <div class="card border-0 transform-on-hover"> 
            
                <%  for(var i=0; i<1 ;i++)  {%>
              <a class="lightbox" href="/groblja/<%= groblja.groblje %>">
                <img src="../views/public/<%= groblja.images[0]%>" class="card-img-top" />
                   
                </a>
               <%}%>
                <div class="card-body">
                    <h6> <a href="/groblja/<%= groblja.groblje %>"><%= groblja.groblje %></a></h6>
                    <p class="text-muted card-text">Župa Srca Marijina u Skopaljskoj 
                      Gračanici ima 11 groblja od kojih se u 4 ukapaju, a svete mise se
                      služe na svim grobljima u proljeće i jesen i Svi svete (Dušni dan),
                       a ona su redom u sljedećim naseljima: Donja Ričica, Gornja Ričica, Pajić Polje, Šubić, Humac, 
                      Okolišće, Zlavast, Kordići, Lužani, Jazvenik, Pernice.

                      Klikom na sliku ispod otvara vam se galerija za pregled slika u pojedinim grobljima.</p>

                </div>
            </div>
            <% if(currentUser){ %>
              <a class="btn btn-primary" href="/groblja/<%= groblja.groblje %>/edit">UREDI</a>
              <% } %>
          </div>
         
          <%});%>
        </div>
      </div>
    </section>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <ul class="social-icons">
              <li><a href="#">NASLOVNA</a></li>
              <li><a href="#">O ŽUPI</a></li>
              <li><a href="#">GROBLJA</a></li>
              <li><a href="#">NOVOSTI</a></li>
              <li><a href="#">KONTAKT</a></li>
            </ul>
          </div>
          <div class="col-lg-12">
            <div class="copyright-text">
              <p>Copyright 2020 Župa Kandija. Sva prava pridržana
                | POWERED BY: <a href="https://www.facebook/stipica19" target="_parent">Stipica</a></p>
            </div>
          </div>
        </div>
      </div>
    </footer>
  
    
    <%- include ('partials/footer.ejs') %>